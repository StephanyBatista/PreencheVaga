<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PreencheVaga.UI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"/>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Preenche Vaga</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/#/tecnologia">Tecnologias</a></li>
                    <li><a href="/#/vaga">Vaga</a></li>
                    <li><a href="/#/candidato">Candidato</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Preenche Vaga</p>
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular/angular-route.js"></script>
    <script src="~/lib/angular/checklist-model.js"></script>
    <script src="~/app/app.module.js"></script>
    <script src="~/app/app.config.js"></script>
    <script src="~/app/_servicos/tecnologiaSrv.js"></script>
    <script src="~/app/_servicos/vagaSrv.js"></script>
    <script src="~/app/_servicos/candidatoSrv.js"></script>
    <script src="~/app/tecnologia/cadastroDeTecnologiaCtrl.js"></script>
    <script src="~/app/tecnologia/listagemDeTecnologiaCtrl.js"></script>
    <script src="~/app/vaga/cadastroDeVagaCtrl.js"></script>
    <script src="~/app/vaga/listagemDeVagaCtrl.js"></script>
    <script src="~/app/candidato/cadastroDeCandidatoCtrl.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
